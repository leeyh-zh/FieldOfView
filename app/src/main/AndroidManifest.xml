<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyh.fieldofview">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.lyh.fieldofview.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.LightStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MovieDetailActivity"
            android:label=""
            android:theme="@style/AppTheme.Movie" />

        <activity
            android:name=".activity.PlayActivity"
            android:label=""
            android:screenOrientation="landscape" />
        <activity android:name=".activity.RelatedActivity" />
        <activity android:name=".activity.VideoAuthorActivity" />
        <activity android:name=".activity.FindInterestingActivity" />
        <activity android:name=".interesting.InterestingActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.VideoListActivity" />

        <activity
            android:name=".activity.ResultActivity"
            android:label="@string/result_title" />
    </application>

</manifest>